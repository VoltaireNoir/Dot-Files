# lock screen and dmenu

super + Delete
	slock

super + q
	exec ~/Scripts/powermenu

# program launcher
super + r
	rofi -show run

alt + Tab
	rofi -show window

super + o ; {f,F,b,B,d,m,s,l,t,O,o,M,q,r,w,R,n}
        {kitty ranger,nautilus,firefox,firefox --private-window,discord,kitty --class "ncmpc" ncmpcpp &! sleep 0.1; kitty --class "cava" cava,steam,logseq,telegram-desktop,obs,obsidian,spotify,qbittorrent,roam-research,firefoxpwa site launch 01FQTTGK6682KTTBGBV7PD2TX8,PIPEWIRE_LATENCY="128/48000" reaper,standard-notes}

super + o ; {c,v}
	{code,neovide}

super + e
    kitty nvim

super + x
	kitty btm

super + shift + x
	kitty bpytop

super + a
	kitty pulsemixer

super + shift + a
	pavucontrol

super + slash
    kitty nmtui

super + shift + w
	forcekill

# Brightness and Volume Controls

XF86AudioMute
	pulsemixer --toggle-mute

XF86AudioRaiseVolume
	pulsemixer --change-volume +2

XF86AudioLowerVolume
	pulsemixer --change-volume -2

XF86MonBrightnessUp
    blight inc 10 -s

XF86MonBrightnessDown
    blight dec 10 -s

ctrl + XF86MonBrightnessUp
    blight inc 100 -s

ctrl + XF86MonBrightnessDown
    blight dec 100 -s

shift + XF86MonBrightnessUp
	blight inc 1

shift + XF86MonBrightnessDown
	blight dec 1

# Notifications Control
super + z
	notify-send "Notifications Resumed"; dunstctl set-paused toggle

super + shift + z
	dunstctl history-pop

# Screenshot Options

Print
    screenshot

alt + Print
    screenshot copy

shift + Print
    screenshot select

alt + shift + Print
    screenshot select-copy

ctrl + Print
    screenshot window

alt + ctrl + Print
    screenshot window-copy

# MPD Controls

XF86AudioPlay
	mpc toggle

XF86AudioStop
	mpc stop

XF86AudioPrev
	mpc prev

XF86AudioNext
	mpc next

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
