# lock screen and dmenu

super + Delete
	slock

super + q
	exec ~/Scripts/dmenupowermenu

super + z
	dunstctl set-paused toggle

super + shift + z
	dunstctl history-pop

# program launcher
super + r
	rofi -show run

alt + Tab
	rofi -show window

super + o ; {f,F,b,d,m,s,l,t,o,M,q,r,w,R,n}
        {kitty ranger,thunar,firefox,discord,kitty ncmpcpp &! sleep 0.1; kitty cava,steam,logseq,telegram-desktop,obs,spotify,qbittorrent,roam-research,firefoxpwa site launch 01FGS4M1ET8XF0GV92XGEYJ4G5,pw-jack -p 256 reaper,standard-notes}

super + o ; {c}
	{code}

super + a
	kitty pulsemixer

super + shift + a
	pavucontrol

super + shift + w
	forcekill

# Brightness and Volume Controls

XF86AudioMute
	pulsemixer --toggle-mute

XF86AudioRaiseVolume
	pulsemixer --change-volume +2

XF86AudioLowerVolume
	pulsemixer --change-volume -2

XF86MonBrightnessUp
	brightnessctl s +2

XF86MonBrightnessDown
	brightnessctl s 2-

# Screenshot Options

Print
	xfce4-screenshooter -f

shift + Print
	xfce4-screenshooter -r

ctrl + Print
	xfce4-screenshooter -w

# MPD Controls

XF86AudioPlay
	mpc toggle

XF86AudioStop
	mpc stop

XF86AudioPrev
	mpc prev

XF86AudioNext
	mpc next

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
