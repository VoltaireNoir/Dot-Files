# lock screen and dmenu

super + Delete
	slock

super + q
	exec ~/Scripts/dmenupowermenu

# program launcher
super + r
	rofi -show run

alt + Tab
	rofi -show window

super + o ; {f,F,b,d,m,s,l,t,o,M,q,r,w,R,n}
        {kitty ranger,nautilus,firefox,discord,kitty musikcube,steam,logseq,telegram-desktop,obs,spotify,qbittorrent,roam-research,firefoxpwa site launch 01FGS4M1ET8XF0GV92XGEYJ4G5,pw-jack -p 256 reaper,standard-notes}

super + XF86AudioPlay
	{glava --desktop}

super + shift + XF86AudioPlay
	{pkill glava}

# Brightness and Volume Controls

XF86AudioMute
	pulsemixer --toggle-mute

XF86AudioRaiseVolume
	pulsemixer --change-volume +2

XF86AudioLowerVolume
	pulsemixer --change-volume -2

XF86MonBrightnessUp
	light -A 2 && light -O

XF86MonBrightnessDown
	light -U 2 && light -O

# Screenshot Options

Print
	xfce4-screenshooter -f

shift + Print
	xfce4-screenshooter -r

ctrl + Print
	xfce4-screenshooter -w

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
