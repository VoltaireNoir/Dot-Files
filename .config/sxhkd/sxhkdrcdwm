# lock screen and dmenu

super + Delete
	slock

super + q
	exec ~/Scripts/powermenu

super + z
	dunstctl set-paused toggle

super + shift + z
	dunstctl history-pop

# program launcher
super + r
	rofi -show run

alt + Tab
	rofi -show window

super + o ; {f,F,b,B,d,m,s,l,t,o,O,M,q,r,w,R,n}
        {kitty ranger,nautilus,firefox,firefox --private-window,discord,kitty --class "ncmpc" ncmpcpp &! sleep 0.1; kitty --class "cava" cava,steam,logseq,telegram-desktop,obs,obsidian,spotify,qbittorrent,roam-research,firefoxpwa site launch 01FQTTGK6682KTTBGBV7PD2TX8,pw-jack -p 256 reaper,standard-notes}

super + o ; {c,e}
	{code,emacs}

super + x
	kitty bpytop

super + shift + x
	kitty htop

super + a
	kitty pulsemixer

super + shift + a
	pavucontrol

super + shift + w
	forcekill

# Brightness and Volume Controls

#XF86AudioMute
	pulsemixer --toggle-mute

#XF86AudioRaiseVolume
	pulsemixer --change-volume +2

#XF86AudioLowerVolume
	pulsemixer --change-volume -2

XF86MonBrightnessUp
	brightnessctl s +2 ; brightnessctl -d amdgpu_bl1 s +2

XF86MonBrightnessDown
	brightnessctl s 2- ; brightnessctl -d amdgpu_bl1 s 2-

# Screenshot Options

Print
	scrot -z -e 'xclip -selection clipboard -t image/png -i $f' ~/Pictures/%Y-%m-%d_screenshot.png	

shift + Print
	scrot -z -e 'xclip -selection clipboard -t image/png -i $f' --select ~/Pictures/%Y-%m-%d_screenshot.png	

ctrl + Print
	scrot -z -e 'xclip -selection clipboard -t image/png -i $f' --focused ~/Pictures/%Y-%m-%d_screenshot.png	

# MPD Controls

XF86AudioPlay
	mpc toggle

XF86AudioStop
	mpc stop

XF86AudioPrev
	mpc prev

XF86AudioNext
	mpc next

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
